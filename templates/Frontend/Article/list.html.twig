{% extends '_layout/main.html.twig' %}

{% block body %}
    <h1>List of all articles <span class="badge badge-light">{{ articles|length }}</span></h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Published</th>
        </tr>
        </thead>
        <tbody>

        {% for article in articles %}
            <tr>
                <td>#{{ article.id }}</td>
                <td>
                    <a href="{{ url('frontend_article_list') }}">{{ article.title }}</a>
                </td>
                <td>
                    {{ article.datePublished|date('d. M Y') }}
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
